<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="520.0" prefWidth="779.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.manedeliveryfx.MenuController">
    <top>
        <VBox prefHeight="83.0" prefWidth="779.0" style="-fx-background-color: #018786;" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="CADASTROS">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onCadProdutos" text="PRODUTOS..." />
                                <MenuItem mnemonicParsing="false" onAction="#onCadMarcas" text="MARCAS..." />
                                <MenuItem mnemonicParsing="false" onAction="#onCadCategorias" text="CATEGORIAS..." />
                                <MenuItem mnemonicParsing="false" onAction="#onCadTiposPagamento" text="TIPOS DE PAGAMENTO..." />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#onFechar" text="FECHAR" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="PEDIDOS">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onNovoPedido" text="NOVO..." />
                                <MenuItem mnemonicParsing="false" onAction="#onGerenciarPedido" text="GERENCIAR..." />
                                <MenuItem mnemonicParsing="false" onAction="#onRelatórioPedido" text="RELATÓRIO" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="AJUDA">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onSobre" text="SOBRE..." />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <ToolBar prefHeight="64.0" prefWidth="1272.0" style="-fx-background-color: #2F4538;">
                    <items>
                        <Button mnemonicParsing="false" onAction="#onNovoPedido" prefHeight="36.0" prefWidth="113.0" style="-fx-background-color: white;" text="Novo Pedido">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onGerenciarPedido" prefHeight="36.0" prefWidth="144.0" style="-fx-background-color: white;" text="Gerenciar Pedidos">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onRelatórioPedido" prefHeight="36.0" prefWidth="127.0" style="-fx-background-color: white;" text="Emitir Relatório">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onCadProdutos" prefHeight="36.0" prefWidth="149.0" style="-fx-background-color: white;" text="Cadastrar Produtos">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onCadCategorias" prefHeight="36.0" prefWidth="158.0" style="-fx-background-color: white;" text="Cadastrar Categorias">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </items>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="491.0" fitWidth="1100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo-fipp.png" />
                    </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
                </ImageView>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="43.0" prefWidth="779.0" style="-fx-background-color: #5D6532;" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Button mnemonicParsing="false" onAction="#onFechar" prefHeight="32.0" prefWidth="65.0" style="-fx-background-color: white;" text="FECHAR">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>

                <Region style="-fx-background-color: #5D6532;" HBox.hgrow="ALWAYS" />

                <Label text="PROJETO PARA FINS EDUCACIONAIS" textFill="WHITE">
                    <font>
                        <Font name="System Italic" size="15.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="18.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>
