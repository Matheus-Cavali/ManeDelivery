<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="520.0" prefWidth="800.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="unoeste.fipp.manedeliveryfx.GerenciarPedidoFormController">

    <children>
        <Label text="ID" textFill="#2768eb">
            <font><Font size="11.0"/></font>
        </Label>
        <TextField fx:id="tfId" editable="false"/>

        <Label text="Cliente" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <TextField fx:id="tfCliente"/>

        <Label text="Telefone" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <TextField fx:id="tfTelefone"/>

        <Label text="Endereço" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <TextField fx:id="tfEndereco"/>

        <Label text="Número" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <TextField fx:id="tfNumero"/>

        <Label text="Tipo de Pagamento" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <ComboBox fx:id="cbTipoPagamento"/>

        <Label text="Status" textFill="#2768eb">
            <font><Font size="11.0"/></font>
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Label>
        <ComboBox fx:id="cbStatus"/>

        <Button text="Itens..." mnemonicParsing="false" onAction="#onGerenciarItens"
                prefHeight="30.0" prefWidth="100.0"
                style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;">
            <VBox.margin><Insets top="12.0"/></VBox.margin>
        </Button>

        <HBox alignment="CENTER" prefHeight="80.0" spacing="60.0">
            <children>
                <Button text="Confirmar" mnemonicParsing="false" onAction="#onConfirmar"
                        prefHeight="33.0" prefWidth="100.0"
                        style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;"/>
                <Button text="Cancelar" mnemonicParsing="false" onAction="#onCancelar"
                        prefHeight="33.0" prefWidth="100.0"
                        style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;"/>
            </children>
            <VBox.margin><Insets top="16.0"/></VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
    </padding>
</VBox>
