<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="480.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="unoeste.fipp.manedeliveryfx.GerenciarPedidoItensFormController">

    <children>
        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <children>
                <Button fx:id="btProduto" onAction="#onSelProduto" prefHeight="30.0" prefWidth="240.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-radius: 5;" text="Selecionar produto" />
                <Spinner fx:id="spQuant" prefHeight="30.0" prefWidth="80.0" />
                <Button onAction="#onAdicItem" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;" text="Adicionar" />
                <Button onAction="#onDelItem" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;" text="Remover" />
            </children>
            <VBox.margin><Insets bottom="6.0" top="10.0" /></VBox.margin>
        </HBox>

        <TableView fx:id="tableView" style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: black;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="coQuant" prefWidth="100.0" text="Quantidade" />
                <TableColumn fx:id="coProduto" prefWidth="520.0" text="Nome" />
                <TableColumn fx:id="coValor" prefWidth="150.0" text="Preco final" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Label text="Total R$  " textFill="#2768eb">
                    <font><Font size="14.0" /></font>
                </Label>
                <Label fx:id="lbTotal" text="0,00">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>
            </children>
            <VBox.margin><Insets bottom="6.0" top="6.0" /></VBox.margin>
        </HBox>

        <HBox alignment="CENTER" spacing="60.0">
            <children>
                <Button onAction="#onConfirmar" prefHeight="33.0" prefWidth="100.0" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;" text="Confirmar" />
                <Button onAction="#onCancelar" prefHeight="33.0" prefWidth="100.0" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 8;" text="Cancelar" />
            </children>
            <VBox.margin><Insets top="10.0" /></VBox.margin>
        </HBox>
    </children>

    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
